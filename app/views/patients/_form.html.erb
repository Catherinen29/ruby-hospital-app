<%= form_for @patient do |p| %>

    <div class="field">
        <%= p.label :first_name, 'First Name' %>
        <%= p.text_field :first_name, placeholder: 'enter their first name' %>
    </div>

    <div class="field">
        <%= p.label :last_name, 'Last Name' %>
        <%= p.text_field :last_name %>
    </div>

    <div class="field">
        <%= p.label :diagnosis, 'Diagnosis' %>
        <%= p.text_field :diagnosis %>
    </div>
    
    <div class="field">
        <%= p.label :born_on, 'Date of birth' %>
        <%= p.text_field :born_on, placeholder: 'yyyy-mm-dd' %>
    </div>

    <%= p.submit 'Submit', :class => 'button' %>

<% end %>